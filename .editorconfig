# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.lua]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.xml]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.xsd]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true
